package open3d.objects{	import open3d.materials.Material;	/**	 * Cube	 * @author katopz	 */	public class Cube extends Mesh	{		public function Cube(size:Number=100, material:Material = null ) 		{			_vin.push(size,-size,size);			_vin.push(size,-size,-size);			_vin.push(-size,-size,-size);			_vin.push(-size,-size,size);			_vin.push(size,size,size);			_vin.push(size,size,-size);			_vin.push(-size,size,-size);			_vin.push(-size,size,size);			_triangles.uvtData.push(0, 0, 1);			_triangles.uvtData.push(1, 0, 1);			_triangles.uvtData.push(1, 1, 1);			_triangles.uvtData.push(0, 1, 1);			_triangles.uvtData.push(0, 0, 1);			_triangles.uvtData.push(1, 0, 1);			_triangles.uvtData.push(1, 1, 1);			_triangles.uvtData.push(0, 1, 1);			/*						   4-------5			 / |      /|			0--------1 |			|  |     | |			|  7-----|-6			|/       |/			3--------2						*/						addTriangles(0,1,2,3);			addTriangles(4,7,6,5);			addTriangles(0,4,5,1);			addTriangles(1,5,6,2);			addTriangles(2,6,7,3);			addTriangles(4,0,3,7);						buildFaces(material);		}		// adding two triangle faces per rectangle		public function addTriangles(index0:Number, index1:Number, index2:Number, index3:Number):void 		{			// first triangle 			_triangles.indices.push(index3, index1, index0);						// second triangle 			_triangles.indices.push(index3, index2, index1);		}	}}